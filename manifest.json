{
    "manifest_version": 3,
    "name": "Nano Prompt",
    "version": "1.0",
    "description": "Transform your ideas into powerful AI prompts effortlessly. This extension guides you to craft, improve, and optimize prompts so you get smarter, faster, and more accurate AI resultsâ€”right in your browser, instantly.",
    "permissions": [
        "http://localhost:3000/",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
    ],
    "icons": {
        "16": "assets/GenerateIcon.png",
        "48": "assets/GenerateIcon.png",
        "128": "assets/GenerateIcon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://gemini.google.com/*",
                "https://claude.ai/*"
            ],
            "js": [
                "modules/config/config.js",
                "modules/resultsContainer.js",
                "modules/buttonSettings.js",
                "modules/popUpSettings.js",
                "modules/buttonGenerate.js",
                "script.js"
            ],
            "css": [
                "modules/statics/style.css"
            ],
            "type": "module"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/GenerateIcon.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "./background/background.js"
    }
}