{
    "manifest_version": 3,
    "name": "Ai Prompte Helper",
    "version": "1.0",
    "description": "Ai Prompte Helper that helps pepole improve theire prompts by providing to them better resultes when theie are typing",
    "permissions": [
        "http://localhost:3000/",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
    ],
    "icons": {
        "16": "assets/GenerateIcon.png",
        "48": "assets/GenerateIcon.png",
        "128": "assets/GenerateIcon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://gemini.google.com/*",
                "https://claude.ai/*"
            ],
            "js": [
                "modules/config/config.js",
                "modules/resultsContainer.js",
                "modules/buttonGenerate.js",
                "script.js"
            ],
            "type": "module"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/GenerateIcon.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "./background/background.js"
    }
}